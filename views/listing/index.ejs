<% layout('layouts/boilerplate') %>

<body>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 row-cols-xl-3 row-cols-xxl-4 card-container">
      <% for(let listing of allListing){ %>
      <a href="/listing/<%= listing._id %>" class="card-anchor">
         <div class="card hover-card">
            <img src="<%= listing.image %>" class="card-img-top" alt="listingImage">
            <div class="card-body">
               <h5 class="card-text">
                  <b><%= listing.title %> </b><br>
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
               </h5>
            </div>
         </div>
      </a>
      <% } %> 
   </div>
</body>